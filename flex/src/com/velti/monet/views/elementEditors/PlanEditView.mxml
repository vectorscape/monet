<?xml version="1.0" encoding="utf-8"?>
<views:DialogBase xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:views="com.velti.monet.views.*"
	title="Start creating your plan">
	<mx:Form width="100%" height="100%">
		<mx:FormItem label="Plan Name">
			<mx:TextInput/>
		</mx:FormItem>
		<mx:FormItem label="Brand Name">
			<mx:ComboBox prompt="- Select -" />
		</mx:FormItem>
		<mx:FormItem label="Schedule" direction="horizontal">
			<mx:VBox>
				<mx:Label text="Starts" />
				<mx:DateField />
			</mx:VBox>
			<mx:VBox>
				<mx:Label text="Ends" />
				<mx:DateField />
			</mx:VBox>
		</mx:FormItem>
		<mx:FormItem label="Budget (US$)">
			<mx:TextInput/>
		</mx:FormItem>
		<mx:FormItem label="Description">
			<mx:TextArea />
		</mx:FormItem>
	</mx:Form>
	<mx:Canvas width="100%" id="bottomCanvas">
		<mx:Button right="30" bottom="10" label="Save" click="close()"/>
	</mx:Canvas>
</views:DialogBase>
